public class Recursionnew{
    public static void main(String[] args){
        int[] arr={1,2,3,34,5};
                System.out.println(sorted(arr,0));
    }
    static boolean sorted(int[] arr,int index){
        if(index==arr.length-1){
            return true;
        }
        if (arr[index] < arr[index+1]) {
            index++;
            return sorted(arr,index);

        }
        else return false;
        }

}
